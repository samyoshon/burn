<div class="col-md-2 sidenav-container">
	<div class="sidenav">
		<%= search_form_for @q, html: { class: "form-inline category_id"} do |f| %>
			<h6 class="market-highlight" style="color: <%= @market.first_color %>">Categories</h6>
			<% Category.all.order("category_name asc").each do |category| %>
	        	<label class="sidenav-category-label">
	        		<%= f.check_box :category_id_in, {class: "checkbox inline", multiple: true, include_blank: true, onchange: 'this.form.submit();' }, category.id, nil %>
	        		<%= category.category_name %>
	        	</label>
	      	<% end %>

	      	<hr>
	      	<h6 class="market-highlight" style="color: <%= @market.first_color %>">Price</h6>

			<%= f.search_field :price_gteq, placeholder: "Low", class: "form-control sidenav-price-label" %> 
				to 
			<%= f.search_field :price_lteq, placeholder: "High", class: "form-control sidenav-price-label" %>
		    <%= f.button '<i class="fa fa-chevron-right" aria-hidden="true"></i>'.html_safe, class: "btn btn-primary", 'data-disable-with' => "<i class='fa fa-spinner fa-spin'>".html_safe, style: "background-color: #{@market.first_color}; border-color: #{@market.first_color}" %>
		<% end %>
	</div>
</div>