<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <h1 class="page-header text-center">Welcome To The Forum</h1>

      <div class="light-well">
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
              <h4 class="panel-title">Create Your Account</h4>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <% if resource.errors.any? %>
                  <div class="alert alert-danger">
                    <% resource.errors.full_messages.each do |msg| %>
                      <div><%= msg %></div>
                    <% end %>
                  </div>
                <% end %>

                <div class="form-group">
                  <%= f.text_field :username, required: true, autofocus: true, placeholder: "Username", class: "form-control" %>
                </div>  

                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <%= f.text_field :first_name, required: true, placeholder: "First Name", class: "form-control" %>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group">
                      <%= f.text_field :last_name, required: true, placeholder: "Last Name", class: "form-control" %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.email_field :email, required: true, placeholder: "Email Address", class: "form-control" %>
                </div>                

                

                <div class="form-group">
                  <div><%= f.label :phone_number %><a href="#" class="tooltip-icon" data-toggle="tooltip" title="Add a phone number if you'd like the option to be contacted via text."> <i class="fa fa-info-circle" aria-hidden="true"></i> </a><br />
                  <%= f.phone_field :phone_number, required: true, placeholder: "(XXX) XXX-XXXX", class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password", class: "form-control" %>
                </div>

                <%= f.hidden_field :market_id, :value => @market.id %> 
                  
                <div class="form-group">
                  <%= f.submit "Register", class: "btn btn-success btn-lg btn-block" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

