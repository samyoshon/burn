<div class="container">
  <div class="pull-right">
    <%= link_to "Post Product", new_market_product_path, class: "btn btn-success" %>
  </div>
  <div class="pull-right" style="margin-right: 10px">
    <%= search_form_for @q, url: search_market_products_path, html: { method: :post } do |f| %>
      <%= f.search_field :title_cont, placeholder: "Search...", class: "form-control" %>
    <% end %>
  </div>

  <h1 class="page-header">Marketplace</h1>
  <%= render @products %>
</div>