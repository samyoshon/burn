<%= form_for [@forum_thread, @forum_post] do |f| %>
  <div class="form-group">
    <%= f.hidden_field :body, placeholder: "Add a comment", rows: 10, class: "form-control", id: "forum_post_body" %>
    <trix-editor input="forum_post_body"></trix-editor>
  </div>
  
  <div class="form-group">
    <% if current_user.present? && current_user.is_advertiser != true %>
      <%= f.submit "Post Comment", class: "btn btn-primary" %>
    <% else %>
      <%= f.submit "Post Comment", class: "btn btn-primary", disabled: true %>
    <% end %>
  </div>
<% end %>
