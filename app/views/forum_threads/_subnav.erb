<div class="container">
	<%= search_form_for @q, html: { class: "form-inline category_id"} do |f| %>
	    <%= f.search_field :subject_cont, placeholder: "Search...", class: "form-control" %>
	    <%= f.submit "Search", class: "btn btn-success" %>
	<% end %>
	<% if !current_user.present? || current_user.is_advertiser != true %>
	    <%= button_to "Post Thread", new_forum_thread_path, :method => "get", class: 'btn btn-primary pull-right' %>
	<% end %>
</div>