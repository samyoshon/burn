<%= form_for(@forum_thread, :html => {:multipart => true}) do |f| %>
  <% if @forum_thread.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum_thread.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @forum_thread.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :subject, autofocus: true, placeholder: "Subject", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.collection_select :forum_category_id, ForumCategory.order(:category_name), :id, :category_name, {prompt: true, required: true}, {class: "form-control"} %>
  </div>

  <%= f.fields_for :forum_posts do |p| %>
    <div class="form-group">
      <%= p.hidden_field :body, placeholder: "Add a comment", class: "form-control", id: "forum_thread_body" %>
      <trix-editor input="forum_thread_body"></trix-editor>


    </div>
  <% end %>

  <div class="form-group">
    <% if current_user.is_advertiser == true %>
      <h6>Sorry, advertisers do not have permissions to post.</h6>
      <%= f.button "Post Thread", class: "btn btn-primary", disabled: true, style: "background-color: #{@market.first_color}; border-color: #{@market.first_color}" %>
    <% else %>
      <%= f.button "Post Thread", class: "btn btn-primary", 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Posting Thread...".html_safe, style: "background-color: #{@market.first_color}; border-color: #{@market.first_color}" %>
    <% end %>
  </div>
<% end %>
