<%= form_for(@forum_thread, :html => {:multipart => true}) do |f| %>
  <% if @forum_thread.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum_thread.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @forum_thread.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :subject, autofocus: true, placeholder: "Subject", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.collection_select :forum_category_id, ForumCategory.order(:category_name),:id,:category_name, prompt: true, required: true %>
  </div>

  <%= f.fields_for :forum_posts do |p| %>
    <div class="form-group">
      <%= p.trix_editor :body, placeholder: "Add a comment", rows: 10, class: "form-control" %>
    </div>
  <% end %>

  <div class="form-group">
    <% if current_user.is_advertiser == true %>
      <%= f.submit class: "btn btn-primary", disabled: true %>
    <% else %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
